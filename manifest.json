{
  "manifest_version": 3,
  "name": "Instahyre Auto-Apply",
  "version": "1.0",
  "description": "Automatically apply for internships on Instahyre",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.instahyre.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instahyre.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
